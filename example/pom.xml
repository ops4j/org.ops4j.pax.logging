<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>pax-logging</artifactId>
    <groupId>org.ops4j.pax.logging</groupId>
    <version>0.6.4-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.ops4j.pax.logging</groupId>
  <artifactId>pax-logging-example</artifactId>
  <packaging>osgi-bundle</packaging>
  <name>OPS4J - Pax Logging Example</name>
  <version>0.6.4-SNAPSHOT</version>
  <description></description>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix.plugins</groupId>
        <artifactId>maven-osgi-plugin</artifactId>
        <version>0.3.0</version>
        <extensions>true</extensions>
        <configuration>
          <osgiManifest>
            <bundleActivator>org.ops4j.pax.logging.example.Activator</bundleActivator>
            <bundleSymbolicName>${pom.artifactId}</bundleSymbolicName>
            <bundleName>${pom.name}</bundleName>
            <bundleDescription>An simple example application that uses the Pax Logging system.</bundleDescription>
            <bundleVendor>${pom.organization.name}</bundleVendor>
            <importPackage>org.osgi.util.tracker; specification-version=1.3, org.ops4j.pax.logging;
              specification-version=1.0, javax.servlet;specification-version=2.3.0,
              javax.servlet.http;specification-version=2.3.0</importPackage>
          </osgiManifest>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.ops4j.pax.logging</groupId>
      <artifactId>pax-logging-client</artifactId>
      <version>0.6.4-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>jetty</groupId>
      <artifactId>org.mortbay.jetty</artifactId>
      <version>5.1.0</version>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi_R4_core</artifactId>
    </dependency>
  </dependencies>
</project>